<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="post" id="registerForm">
    <fieldset>
        <label for="accountFirstname">First name: </label>
        <input type="text" name="account_firstname" id="accountFirstname" title="First Name" required value="<%= locals.account_firstname %>">
    </fieldset>
    <fieldset>
        <label for="accountLastname">Last name:</label>
        <input type="text" name="account_lastname" title="Last Name" required value="<%= locals.account_lastname %>">
    </fieldset>
    <fieldset>
        <label for="accountEmail">Email: </label>
        <input type="email" name="account_email" title="email" required value="<%= locals.account_email %>">
    </fieldset>
    <fieldset>
        <div class="password">
            <label for="accountPassword">Password: </label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
            <input type="password" name="account_password" title="password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
    </fieldset>

    <input type="submit" value="Register" name="Register"> 

</form>