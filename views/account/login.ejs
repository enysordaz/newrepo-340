<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error=> { %>
        <% if (error.msg !='Invalid value' ) { %>
 
          <li>
            <%= error.msg %>
          </li>
          <% } %>
            <% }) %>
    </ul>
<% }%>


<form id="myAccount" action="/account/login" method="post">
    <fieldset>
        <label for="accountEmail">Email: </label>
        <input type="email" name="account_email" title="email" id="accountEmail" required value="<%= locals.account_email %>">
    </fieldset>
    <fieldset>
        <div class="password">
            <label for="password">Password: </label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
            <input type="password" name="account_password" title="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
    </fieldset>

    <input type="submit" value="LOGIN" name="login"> 
    <span class="sign-up">No account? <a href="register" class="sign-up">Sign-up</a></span>
</form>
